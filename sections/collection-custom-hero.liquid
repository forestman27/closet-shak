{% comment %}
  Section: Collection Hero
  Description: A hero section with a title, scroll button, and background image from the collection.
{% endcomment %}

{% if collection.image and collection.image.src %}
  <style>
    .custom-collection-hero {
      background-image: linear-gradient(rgba(0, 0, 0, .4), rgba(0, 0, 0, .4)), url({{ collection.image.src | img_url: 'master' | prepend: 'https:' }});
      background-position: 0 0, 50%;
      background-size: auto, cover;
      flex-flow: column;
      justify-content: center;
      align-items: center;
      min-height: 80vh;
      display: flex;
      position: relative;
    }

    .shop-more-link {
      color: #fff;
      flex-flow: column;
      justify-content: center;
      align-items: center;
      padding-bottom: 20px;
      text-decoration: none;
      display: flex;
      position: absolute;
      bottom: 0;
    }

    .collection-heading {
      color: #fff;
    }

    .div-block {
      flex-flow: column;
      justify-content: center;
      align-items: center;
      display: flex;
    }

    .collection-link {
      color: #fff;
      background-color: rgba(0, 0, 0, .25);
      border: 1px solid #fff;
      padding: 5px 20px;
      text-decoration: none;
    }
  </style>
  <div class="custom-collection-hero">
    {%- if collection.products.size != 0 -%}
      <div class="div-block">
        <h1 class="collection-heading">{{ collection.title }}</h1>
        <a id="view-collection" href="#" class="collection-link w-inline-block">
          <div>View Collection</div>
        </a>
      </div>
      <a id="scroll-button" href="#" class="shop-more-link w-inline-block">
        <p>Shop Store</p>
        <img
          src="https://cdn.shopify.com/s/files/1/0880/7035/7267/files/chevron-down.svg?v=1719444020"
          loading="lazy"
          alt=""
        >
      </a>
    {%- else -%}
      <div></div>
      <div class="get-drop-notifications">
        Get Drop Notifications
        <svg
          viewBox="0 0 14 10"
          fill="none"
          aria-hidden="true"
          focusable="false"
          class="icon icon-arrow"
          xmlns="http://www.w3.org/2000/svg"
          style="color:white !important; fill: white !important;"
        >
          <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"></path>
        </svg>
      </div>
      <form
        method="post"
        action="/contact#ContactFooter"
        id="ContactFooter"
        accept-charset="UTF-8"
        class="next-newsletter-form"
      >
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper">
          <div class="field">
            <input
              id="NewsletterForm--sections--22800371351827__footer"
              type="email"
              name="contact[email]"
              class="field__input next-field__input"
              value=""
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              placeholder="Email"
              required=""
            >
            <label class="field__label next-field-label" for="NewsletterForm--sections--22800371351827__footer">
              Email
            </label>
            <button
              type="submit"
              class="newsletter-form__button field__button"
              name="commit"
              id="Subscribe"
              aria-label="Subscribe"
            >
              <svg
                viewBox="0 0 14 10"
                fill="none"
                aria-hidden="true"
                focusable="false"
                class="icon icon-arrow"
                xmlns="http://www.w3.org/2000/svg"
                style="color:white !important; fill: white !important;"
              >
                <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"></path>
              </svg>
            </button>
          </div>
        </div>
      </form>
      <div class="w-embed w-script">
        <script src="https://static.elfsight.com/platform/platform.js" data-use-service-core="" defer=""></script>
        <div class="elfsight-app-43bde5c2-1512-476d-961a-1faa817c9273" data-elfsight-app-lazy=""></div>
      </div>
    
      <a href="/#shopify-section-template--22800370893075__image_banner" class="shop-more-link w-inline-block">
        <p>Shop Store</p>
        <img
          src="https://cdn.shopify.com/s/files/1/0880/7035/7267/files/chevron-down.svg?v=1719444020"
          loading="lazy"
          alt="shop more"
        >
      </a>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          var getDropNotifications = document.querySelector('.get-drop-notifications');
          var newsletterForm = document.querySelector('.next-newsletter-form');
      
          getDropNotifications.addEventListener('click', function() {
            newsletterForm.style.display = 'flex';
            getDropNotifications.style.display = 'none';
          });
        });
      </script>
    {%- endif -%}

  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const shopMoreLink = document.getElementById('scroll-button');
      shopMoreLink.addEventListener('click', function(event) {
          event.preventDefault();
          const currentSection = shopMoreLink.closest('.shopify-section');
          if (currentSection) {
              const nextSection = currentSection.nextElementSibling;
              if (nextSection) {
                nextSection.scrollIntoView({ behavior: 'smooth' });
              }
          }
      });

      const viewCollectionLink = document.getElementById('view-collection');
      viewCollectionLink.addEventListener('click', function(event) {
          event.preventDefault();
          const currentSection = viewCollectionLink.closest('.shopify-section');
          if (currentSection) {
              const nextSection = currentSection.nextElementSibling;
              if (nextSection) {
                nextSection.scrollIntoView({ behavior: 'smooth' });
              }
          }
      });
    });
  </script>
{% endif %}

